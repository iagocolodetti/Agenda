<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FiltroAutenticacao</filter-name>
        <filter-class>br.com.iagocolodetti.controle.FiltroAutenticacao</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroAutenticacao</filter-name>
        <servlet-name>ServletAgenda</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroAutenticacao</filter-name>
        <servlet-name>ServletNovo</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroAutenticacao</filter-name>
        <servlet-name>ServletAlterar</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroAutenticacao</filter-name>
        <servlet-name>ServletRemover</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletIndex</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAgenda</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletAgenda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletNovo</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletNovo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterar</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRemover</servlet-name>
        <servlet-class>br.com.iagocolodetti.controle.ServletRemover</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletIndex</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAgenda</servlet-name>
        <url-pattern>/agenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletNovo</servlet-name>
        <url-pattern>/novo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterar</servlet-name>
        <url-pattern>/alterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRemover</servlet-name>
        <url-pattern>/remover</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>
